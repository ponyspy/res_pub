.toggle_meta.select
	color red

.add_media
	width 100%
	border 3px solid maroon
	text-align center
	margin-bottom 40px
	box-sizing border-box
	padding-top 10px
	padding-bottom 8px
	position relative
	user-select none
	.add_title
		z-index 1
		position relative
	.add_progress
		background-color rgb(74, 140, 247)
		height 100%
		width 0%
		position absolute
		top 0
		z-index 0
	&.selected
	&:hover
		color white
		cursor pointer
		background-color maroon

.media_block
	background-color lightgrey
	&.meta_show
		.meta, .option
			display inline-block!important
	.media_item
		width 270px
		height 165px
		background-color maroon
		float left
		margin-right 40px
		margin-bottom 40px
		position relative
		.title
			font-size 44pt
			line-height 40pt
			position absolute
			width 100%
			text-align center
			margin-top 50px
		&:nth-child(4n)
			margin-right 0
		&:hover
			.meta, .option
				display inline-block
		.meta
		.option
			background-color black
			color white
			position absolute
			padding 2px 8px 2px 8px
			min-width 15px
			text-align center
			user-select none
			display none
			&:hover
				background-color red
				cursor pointer
			&.hide
				display none!important
			&.select_item
				&:after
					content '◦'
				&.selected
					display inline-block!important
					&:after
						content '●'
			&.tobegin_item
				left 31px
				&:after
					content '⇤' // ★
			&.remove_item
				right 0
				&:after
					content '×'
			&.update_item
				right 31px
				&:after
					content '✓'
				&:hover
					background-color rgb(104, 206, 70)
			&.counter.plus
				right 0
				bottom 50px
				&:after
					content '+'
			&.counter.minus
				right 0
				bottom 25px
				&:after
					content '--'
			&.duration
				right 0
				bottom 0
				&:after
					content 's'
			&.interval
				left 0
				bottom 0
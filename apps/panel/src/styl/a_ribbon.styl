.slider_block::-webkit-scrollbar {
	-webkit-appearance: none;
	width: 8px;
}

.slider_block::-webkit-scrollbar-track {
	background-color: lightgrey;
	border-radius: 8px;
}

.slider_block::-webkit-scrollbar-thumb {
	border-radius: 8px;
	background-color: rgb(74, 140, 247)
}

.slider_block
	background-color lightgrey
	white-space nowrap
	overflow-y hidden
	vertical-align top
	font-size 0
	min-height 180px
	&.ribbon
		.media_item
			background-color green
		.placeholder
			background-color red
	&.pool
		.media_item
			background-color maroon
		.meta:hover
			cursor move
			background-color black!important
	.media_item
	.placeholder
		display inline-block
		vertical-align top
		width 240px
		height 180px
		font-size 12pt
		margin-right 10px
		cursor move
	.media_item
		position relative
		&:last-child
			margin-right 0
	.title
		font-size 48pt
		line-height 40pt
		display inline
	.meta
	.option
		background-color black
		color white
		display inline-block
		position absolute
		padding 2px 8px 2px 8px
		min-width 15px
		text-align center
		user-select none
		&.hide
			display none
		&:hover
			background-color red
			cursor pointer
		&.revert_meta
			right 27px
		&.add_meta
			left 0
			bottom 0
		&.remove_item
		&.add_item
			right 0
		&.counter.plus
			right 0
			bottom 50px
		&.counter.minus
			right 0
			bottom 25px
		&.duration
			right 0
			bottom 0
			&:after
				content 's'
		&.interval
			left 0
			bottom 0
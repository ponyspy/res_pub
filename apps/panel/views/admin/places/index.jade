extends ../layout
include _places.jade

block header_meta
	- var content_title= 'ЛОКАЦИИ'

block header_include
	- var include_css = ['add.css']
	- var include_js = ['lists.js']

block sub_menu
	a.sub_item.back_link(href='/admin') Назад
	span.sub_item.toggle_rm Удалить
	.sub_right_block

		.sub_drop.status(style='z-index: 1;')
			.drop_title Статус
			.drop_inner
				.drop_item(class='all').select Все
				.drop_item(class='base') Обычный
				.drop_item(class='hidden') Скрытый

		input.sub_search(type='text', placeholder='Поиск...')

block content
	.title= content_title
	br
	- var locations = { 'shop': 'магазин', 'city': 'город', 'device': 'устройство' }
	a.add(href='/admin/places/add/' + ((type && parent) ? ('?type=' + type) + '&' + ('parent=' + parent) : ''))= '+ Добавить ' + (type ? locations[type] : locations['city'])
	br
	br
	.lists_block
		.list_items
			+items(places)
		.list_counter
			+counters(count)
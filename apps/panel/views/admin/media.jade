extends layout

block header_meta
	- var content_title= 'КОНТЕНТ'

block header_include
	- var include_libs_css = ['pickmeup.min.css']
	- var include_css = ['add.css', 'a_media.css']
	- var include_libs_js = ['jquery.pickmeup.min.js',]
	- var include_js = ['add.js', 'a_media.js', 'a_events.js']

block sub_menu
	a.sub_item.back_link(href='/admin') Назад
	span.sub_item.toggle_meta Мета

block content
	.form_block
		.title= content_title
		.form_title Шаблон - интервал:
		input.interval(type='text')
		.form_title Шаблон - продолжительность / повтор:
		select(name='duration')
			each item, i in new Array(9)
				option(value=(i+1), selected=(i+1) == 3)= (i+1) + 's'
		span= ' / '
		select(name='duration')
			each item, i in new Array(5)
				option(value=(i+1))= (i+1) + 'r'
		.form_title Контент:
		.add_media ДОБАВИТЬ КОНТЕНТ
		.media_block
			each item, i in new Array(15)
				.media_item
					.title= i
					.option.remove_item ×
					.option.update_item ✓
					.option.counter.plus.hide +
					.option.counter.minus.hide --
					.meta.duration 3
					.meta.interval 24.12.17 - 28.12.17
html, body
	margin 0
	padding 0

.slider_block
	position absolute
	z-index 999
	overflow-y hidden
	bottom 0
	background-color lightgrey
	width 100%
	display none
	height 152px
	&.show
		display block
	.slider_inner
		display inline-block
		white-space nowrap
	.slide_item
		width 270px
		height 152px
		background-color grey
		display inline-block
		white-space nowrap
		margin-right 20px
		background-position center
		background-size contain
		background-repeat no-repeat
		position relative
		&:last-child
			margin-right 0
		&.go:after
			position absolute
			content ''
			width 40px
			height 40px
			background-color green
			bottom 0
			right 0
		&.current:after
			position absolute
			content ''
			width 40px
			height 40px
			background-color yellow
			bottom 0
			right 0

.view_block
	background-color black
	width 100%
	height 100%
	position absolute
	z-index 99
	.image
		background-position center
		background-size contain
		background-repeat no-repeat
	.image, .video
		width 100%
		height 100%
		display none
		&.show
			display block

.panel_block
	background-color lightgrey
	width 100%
	top 0
	padding-top 20px
	padding-bottom 20px
	padding-left 40px
	box-sizing border-box
	user-select none
	opacity 0
	position absolute
	z-index 999
	transition .15s linear
	&.show
	&:hover
		transition .15s linear
		opacity 1
	.separator
		display inline-block
		margin-right 60px
	.button
		font 14pt/16pt 'Times'
		margin-right 20px
		display inline-block
		cursor pointer
		border 2px solid black
		padding 5px
		padding-left 15px
		padding-right 15px
		&.active
		&:hover
			color white
			background-color black
	.place_title
		float right
		margin-right 40px
		margin-top 7px
		font 14pt/16pt 'Times'

.places_block
	display none
	width 540px
	height 380px
	position absolute
	top 0; left 0; right 0; bottom 0
	margin auto
	left 50%
	margin-left -270px
	background-color lightgrey
	z-index 999
	user-select none
	&.show
		display block
	.places_title
		font-size 14pt
		.p_title
			cursor pointer
			display inline-block
			padding 8px
			&:hover
				background-color black
				color white
			&:after
				content 'âœ•'
				font-size 14pt
				margin-left 15px
				margin-right 10px
	.places_list
		background-color rgba(246, 245, 242, 1.000)
		position absolute
		top 38px
		bottom 38px
		width 100%
		overflow scroll
		.place_item
			font-size 14pt
			padding 8px
			cursor pointer
			&.active
			&:hover
				background-color black
				color white
	.places_connect
		position absolute
		bottom 0
		text-align center
		background-color grey
		width 100%
		padding 10px
		box-sizing border-box
		cursor default
		&.active
			cursor pointer
			color white
			background-color red
			&:hover
				color red
				background-color white